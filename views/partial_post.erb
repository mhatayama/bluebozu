<div class="single-post">
  <h2><%= @post.title %></h2>
  <div>
    <span class="date"><%= @post.date.strftime(settings.date_format) %></span>
    <a href="/<%= @post.post_id %>" class="permlink">∞</a>
    <span class="category"><%= @post.category.capitalize %></span>
  </div>
  <div class="content">
    <%= Kramdown::Document.new(@post.content).to_html %>
  </div>
  <div class="separator">◆</div>
</div>
