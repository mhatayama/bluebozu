<div class="single-post">
  <h2><%= @post.title %></h2>
  <div>
    <span class="date"><%= @post.date.strftime($cfg[:date_format]) %></span>
    <a href="/<%= @post.post_id %>" class="permlink">∞</a>
  </div>
  <div class="content">
    <%= REDCARPET.render(@post.content) %>
  </div>
  <div class="separator">◆</div>
</div>
